{
  "name": "ombor",
  "type": "module",
  "version": "0.0.3",
  "description": "Firebasega uslubidagi, offalyn, mahalliy ma'lumotlar bazasi.",
  "main": "dist/ombor.umd.js",
  "module": "dist/ombor.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "bundle": "npm run build",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && npm publish",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "testing": "echo \"Error: no test specified\" && exit 1",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "changelog": "standard-version --dry-run --release-as patch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "Otabek Sadiridinov",
  "license": "MIT",
  "dependencies": {
    "localforage": "^1.10.0",
    "ordered-uuid": "^1.1.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otabekoff/ombor.git"
  },
  "keywords": [
    "database",
    "offline",
    "firebase",
    "firestore",
    "indexeddb",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/otabekoff/ombor/issues"
  },
  "homepage": "https://github.com/otabekoff/ombor#readme"
}
